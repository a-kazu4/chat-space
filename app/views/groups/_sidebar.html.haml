.sidebar
  .user
    .user__name
      = current_user.name
    .user__icons
      = link_to new_group_path, class: 'user__icons__icon' do
        %i.fa.fa-pencil-square-o
      = link_to edit_user_path(current_user), class: 'user__icons__icon' do
        %i.fa.fa-cog
  .groups
    = render partial: 'groups/group', collection: @groups
